    @abstractmethod
    def process(self, video: Video) -> ProcessedVideo:
        pass

class ConcreteVideoProcessor(AbstractVideoProcessor):
    def process(self, video: Video) -> ProcessedVideo:
        return video  # Does nothing useful

# Good âœ… - Simple and direct
