# Application Settings
APP_NAME="AI-Powered YouTube SEO Assistant"
APP_VERSION="1.0.0"
DEBUG=false
LOG_LEVEL=INFO
HOST=127.0.0.1
PORT=8000
RELOAD=false

# YouTube API Configuration
YOUTUBE_CREDENTIALS_FILE=config/credentials.json
YOUTUBE_TOKEN_FILE=data/storage/token.json
YOUTUBE_API_QUOTA_LIMIT=10000

# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=1000

# Storage Configuration
STORAGE_PATH=data/storage
STRATEGY_STORAGE_PATH=data/storage/strategies
CACHE_PATH=data/storage/cache
THUMBNAILS_PATH=data/storage/thumbnails

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Security
SECRET_KEY=your_secret_key_here
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000", "http://localhost:8000"]

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600
MEMORY_CACHE_SIZE=1000

# Logging
LOG_FILE=data/logs/app.log
LOG_ROTATION=1MB
LOG_RETENTION=7 days

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_THUMBNAILS=true
ENABLE_COMPETITORS=true
ENABLE_KEYWORDS=true
